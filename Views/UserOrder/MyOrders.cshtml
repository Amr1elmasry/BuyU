@model List<BuyU.ViewModels.MyOrdersViewModel>

@{
    ViewData["Title"] = "MyOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>MyOrders</h1>
@{
    var check = !Model.Any();
}
@if (check)
{
    <div class="text-center mt-5">
        <h2 style="color:blue; font-family:cursive">No Orders are Found !</h2>
    </div>
}
else 
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Address
                </th>
                <th>
                    PhoneNumber
                </th>
                <th>
                    TotalPrice
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>

                        <a class="btn btn-warning btn-sm" href="#" role="button">Products</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

